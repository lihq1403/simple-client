{
    "name": "lihq1403/simple-client",
    "description": "Simple Client.",
    "license": "MIT",
    "authors": [
        {
            "name": "lihq1403",
            "email": "lihqing1403@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "pimple/pimple": "^3.0",
        "adbario/php-dot-notation": "^3.3",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "psr/log": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "Lihq1403\\SimpleClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lihq1403\\SimpleClient\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "./vendor/bin/phpunit"
    }
}
